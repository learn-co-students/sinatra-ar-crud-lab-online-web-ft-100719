<form action="/articles/<%= @article.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <h2><%= @article.title %></h2>
    <input type="text" name="title">
    <p><%= @article.content %></p>
    <input type="text" name="content">
    <input type="submit">
</form>